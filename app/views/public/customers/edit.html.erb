<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4>会員情報編集</h4>
      <%= form_with model: @customer, url: '/customers' do |f| %>

        <div class="field">
          <label>名前</label>
          <label>(性)</label>
          <%= f.text_field :last_name %>
          <label>(名)</label>
          <%= f.text_field :first_name %>
        </div>

        <div class="field">
          <label>フリガナ</label>
          <label>(セイ)</label>
          <%= f.text_field :last_name_kana %>
          <label>(メイ)</label>
          <%= f.text_field :first_name_kana %>
        </div>

        <div class="field">
          <label>郵便番号(ハイフンなし)</label>
          <%= f.text_field :postal_code %>
        </div>

        <div class="field">
          <label>住所</label>
          <%= f.text_field :address %>
        </div>

        <div class="field">
          <label>電話番号(ハイフンなし)</label>
          <%= f.text_field :telephone %>
        </div>

        <div class="field">
          <label>メールアドレス</label>
          <%= f.email_field :email %>
        </div>

        <div class="actions">
          <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
          <%= link_to '退会する', withdrawal_path, class: 'btn btn-danger' %>
        </div>

      <% end %>
    </div>
  </div>
</div>