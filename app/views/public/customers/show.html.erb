<div class="container">
  <div class="row">
    <div class="col-md-7">
      <h4>マイページ</h4>
      <span>登録情報</span>
      <%= link_to '編集する', edit_customers_path, class: 'btn btn-success'%>
      <table border="2" class="table">
        <tr>
          <th scope="col" class="table-secondary">氏名</th>
          <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>
        <tr>
          <th scope="col" class="table-secondary">カナ</th>
          <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th scope="col" class="table-secondary">郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th scope="col" class="table-secondary">住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th scope="col" class="table-secondary">電話番号</th>
          <td><%= @customer.telephone %></td>
        </tr>
        <tr>
          <th scope="col" class="table-secondary">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
      <span>配送先</span>
      <%= link_to '一覧を見る', addresses_path, class: 'btn btn-primary' %><br>
      <span>注文履歴</span>
      <%= link_to '一覧を見る', orders_path, class: 'btn btn-primary' %>
    </div>
    <div class="col-md-5"></div>
  </div>
</div>