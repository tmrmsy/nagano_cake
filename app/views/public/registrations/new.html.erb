<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>新規会員登録</h2>

      <%= form_with model: @customer, url: '/customers' do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <label>名前</label>
          <label>(性)</label>
          <%= f.text_field :last_name %>
          <label>(名)</label>
          <%= f.text_field :first_name %>
        </div>

        <div class="field">
          <label>フリガナ</label>
          <label>(セイ)</label>
          <%= f.text_field :last_name_kana %>
          <label>(メイ)</label>
          <%= f.text_field :first_name_kana %>
        </div>

        <div class="field">
          <label>メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <label>郵便番号(ハイフンなし)</label>
          <%= f.text_field :postal_code %>
        </div>

        <div class="field">
          <label>住所</label>
          <%= f.text_field :address %>
        </div>

        <div class="field">
          <label>電話番号(ハイフンなし)</label>
          <%= f.text_field :telephone %>
        </div>

        <div class="field">
          <label>パスワード(6文字以上)</label>
          <% if @minimum_password_length %>
          <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <label>パスワード(確認用)</label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: 'btn btn-success' %>
        </div>
      <% end %>
      <h5>既に登録済みの方</h5>
      <%= link_to 'こちら', new_customer_session_path %>
      <span>　からログインしてください。</span>
    </div>
  </div>
</div>