<div class="container">
  <div class="row">
    <div class="col-md-7">
      <h5>注文履歴詳細</h5>
      <span>注文情報</span>
      <table border="2" class="table">
        <tbody>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.to_s(:datetime_jp) %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>
              <span>〒</span>
              <%= @order.shipping_postal_code %><br>
              <%= @order.shipping_address %><br>
              <%= @order.shipping_name %>
              </td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= @order_details.find_by(order_id: @order.id).making_status_i18n %></td>
          </tr>
        </tbody>
      </table>

      <span>注文内容</span>
      <table border="2" class="table">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_item| %>
            <% if order_item.order_id == @order.id %>
              <tr>
                <td><%= order_item.item.name %></td>
                <td><%= (order_item.item.with_tax_price).to_s(:delimited) %></td>
                <td><%= order_item.amount %></td>
                <td><%= (order_item.item.with_tax_price * order_item.amount).to_s(:delimited) %></td>
                <% @total += (order_item.item.with_tax_price * order_item.amount) %>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-5">
      <span>請求情報</span>
      <table border="2" class="table">
        <tbody>
          <tr>
            <th>商品合計</th>
            <td><%= @total %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><%= @order.postage %></td>
          </tr>
          <tr>
            <th><strong>請求額</strong></th>
            <td><%= @total + @order.postage %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>