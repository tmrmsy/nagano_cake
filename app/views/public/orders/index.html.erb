<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h5>注文履歴一覧</h5>
      <table border="2" class="table">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <% if order.customer_id == current_customer.id %>
              <tr>
                <td><%= order.created_at.to_s(:datetime_jp) %></td>
                <td><%= order.shipping_address_display %></td>
                <td>
                  <% @order_details.each do |order_item| %>
                    <% if order_item.order_id == order.id %>
                      <%= order_item.item.name %><br>
                      <% @total += order_item.price * order_item.amount %>
                    <% end %>
                  <% end %>
                </td>
                <td><%= @total.to_s(:delimited) %></td>
                <td>
                  <%= order.order_status_i18n %>
                </td>
                <td><%= link_to '表示する', order_path(order.id), class: 'btn btn-primary' %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>