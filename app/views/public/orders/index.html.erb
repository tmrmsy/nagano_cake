<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h5>注文履歴一覧</h5>
      <table border="2" class="table">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.to_s(:datetime_jp) %></td>
              <td><%= order.shipping_address_display %></td>
              <td><%= order.item.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>