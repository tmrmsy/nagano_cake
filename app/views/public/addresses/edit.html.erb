<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4 class="m-3">配送先編集</h4>
      <%= form_with model: @address, url: address_path do |f| %>
        <label>郵便番号(ハイフンなし) </label>
        <%= f.text_field :postal_code %><br>

        <label>住所</label>
        <%= f.text_field :address %><br>

        <label>宛名</label>
        <%= f.text_field :name %>
        <%= f.submit '変更内容を保存', class: 'btn btn-success' %>

      <% end %>
    </div>
  </div>
</div>
