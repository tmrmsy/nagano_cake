<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>ログイン</h2>
      <%= form_with model: @customer, url: customer_session_path, class: 'form-body p-2' do |f| %>
        <div class="field">
          <label>メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "sample@example.com" %>
        </div>

        <div class="field">
          <label>パスワード</label>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: 'btn btn-sm btn-primary' %>
        </div>
      <% end %>

      <p>会員登録がお済みでない方</p>
      <%= link_to 'こちら', new_customer_registration_path %>
      <span>　から新規登録を行なってください。</span>
    </div>
  </div>
</div>
