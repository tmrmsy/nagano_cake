<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h5>注文履歴一覧</h5>
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><br></td>
              <td><%= order.customer.last_name + order.customer.first_name %></td>
              <td></td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>