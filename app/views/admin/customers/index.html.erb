<h2>会員一覧</h2>
<div>
  <table>
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <%= link_to admin_cutomer_path(customer.id) do %>
            <td><%= customer.last_name %><%= customer.first_name %></td>
          <% end %>
          <td><%= customer.email %></td>
          <% if customer.is_active %>
            <td>有効</td>
          <% else %>
            <td>退会</td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
