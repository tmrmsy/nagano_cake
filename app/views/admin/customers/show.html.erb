<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4>
      <label>会員ID</label>
      <%= @customer.id %><br>

      <label>氏名</label>
      <%= @customer.last_name %> <%= @customer.first_name %><br>

      <label>フリガナ</label>
      <%= @customer.last_name_kana %> <% @customer.first_name_kana %><br>

      <label>郵便番号</label>
      <%= @customer.postal_code %><br>

      <label>住所</label>
      <%= @customer.address %><br>

      <label>電話番号</label>
      <%= @customer.telephone %><br>

      <label>メールアドレス</label>
      <%= @customer.email %><br>

      <label>会員ステータス</label>
      <% if @customer.is_deleted %>
        <label>退会</label><br>
      <% else %>
        <label>有効</label><br>
      <% end %>

      <%= link_to '編集する', edit_admin_customer_path(@customer.id), class: 'btn btn-success' %>
    </div>
  </div>
</div>