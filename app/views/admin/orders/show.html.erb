<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h5>注文履歴詳細</h5>
      <label>購入者</label>
      <%= link_to @order.shipping_name, admin_customer_path(@order.customer_id) %><br>

      <label>注文日</label>
      <%= @order.created_at.to_s(:datetime_jp) %><br>

      <label>配送先</label>
      <%= @order.shipping_address %><br>

      <label>支払方法</label>
      <%= @order.payment_method_i18n %><br>

      <label>注文ステータス</label>
      <%= @order.order_status_i18n %>

      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <% if order_detail.order_id == @order.id %>
              <tr>
                <td><%= order_detail.item.name %></td>
                <td><%= order_detail.item.with_tax_price %></td>
                <td><%= order_detail.amount %></td>
                <td><%= order_detail.item.with_tax_price * order_detail.amount %></td>
                <td>
                  <%= form_with model: order_detail, url: admin_customer_path(@order.id) do |f| %>
                    <%= f.collection_select(:making_status, OrderDetail.making_status, :making_status, :making_statuses_i18n, prompt: "選択してください")  %>
                    <%= f.submit '更新', class: 'btn btn-success' %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>