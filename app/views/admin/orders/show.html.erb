<h2>注文履歴詳細</h2>
<div>
  <label>購入者</label>
  <%= link_to admin_cutomer_path(@order.customer.id) do %>
    <%= @order.customer.last_name %><%= @order.customer.first_name %><br>
  <% end %>
  
  <label>注文日</label>
  <%= @order.created_at %><br>
  
  <label>配送先</label>
  <%= @order.shipping_postal_code %> <%= @order.shipping_address %><br>
  
  <label>支払方法</label>
  <%= @order.payment_method %><br>
  
  <label>注文ステータス</label>
  <%= form_with model: @order, url: admin_order_path(@order.id) do |f| %>
    <%= f.collection_select(:order_status, @order, :order_status, :order_status %>
    <%= f.submit '更新' %>
  <% end %>
</div>

<div>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th>製作ステータス</th>
      </tr>
    </thead>
    <tbody>
      <%= @order.order_datails.each do |order_datail| %>
        <tr>
          <td><%= order_datail.item.name %></td>
          <td><%= (order_datail.item.price * 1.1).round %></td>
          <td><%= order_datail.amount %></td>
          <td><%= (order_datail.item.price * order_datail.amount).round %></td>
          <%= form_with model: @order.making_status, url: admin_order_path(@order.order_datails.id) do |f| %>
            <%= f.collection_select(:making_status, @order.order_datails.making_status, :making_status, :making_status)  %>
            <%= f.submit '更新' %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>