<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class"row">
        <h4>ジャンル一覧・追加</h4>
        <%= form_with model: @genre, url: admin_genres_path do |f| %>
          <label>ジャンル名</label>
          <%= f.text_field :name %>
          <%= f.submit '新規登録', class: 'btn btn-success' %>
        <% end %>
      </div>

      <div class"row">
        <table class="table">
          <thead class="thead-light">
            <tr>
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
     </div>
    <div class="col-md-6"></div>
  </div>
</div>