<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h4>商品詳細</h4>
      <% if @item.image.attached? %>
        <%= image_tag @item.image, width: '80%', height: '80%' %>
      <% else %>
        <%= image_tag 'sweets_shortcake', width: '30%', height: '30%' %>
      <% end %>
    </div>
    <div class="col-md-8">
      <label>商品名</label>
      <%= @item.name %><br>
      <label>商品説明</label>
      <%= @item.introduction %><br>
      <label>ジャンル</label>
      <%= @item.genre.name %><br>
      <label>税込価格</label>
      <%= (@item.price * 1.1).round %>(<%= @item.price %>)<br>
      <label>(税抜価格)</label><br>
      <label>販売ステータス</label>
      <% if @item.is_active %>
        <label>販売中</label><br>
      <% else %>
        <label>販売停止中</label><br>
      <% end %>
      <%= link_to '編集する', edit_admin_item_path(@item.id), class: 'btn btn-success' %>
    </div>
  </div>
</div>