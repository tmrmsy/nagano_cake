<h2>商品新規登録</h2>

<%= form_with model: @item, url: '/admin/items' do |f| %>

<label>商品画像</label>
<%= f.file_field :image, accept: "image/*" %><br>

<label>商品名</label>
<%= f.text_field :name %><br>

<label>商品説明</label>
<%= f.text_area :introduction %><br>

<label>ジャンル</label>
<%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "選択してください")  %><br>

<label>税抜価格</label>
<%= f.text_field :price %>円<br>

<label>販売ステータス</label>
<%= f.label :is_active, '販売中', value: true %>
<%= f.radio_button :is_active, 'true' %>

<%= f.label :is_active, '販売停止中', value: false %>
<%= f.radio_button :is_active, 'false' %><br>

<%= f.submit '新規登録' %>

<% end %>