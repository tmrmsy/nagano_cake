<div class="container">
  <div class="row">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center rounded px-0 my-5">
      <h3>管理者ログイン</h3>

      <%= form_with model: @admin, url: admin_session_path, class: 'form-body p-2' do |f| %>
        <div class="input-group mb-3">
          <label>メールアドレス　　</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="input-group mb-3">
          <label>パスワード　　　　</label>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: 'btn btn-sm btn-primary' %>
        </div>
    <% end %>
    </div>
  </div>
</div>